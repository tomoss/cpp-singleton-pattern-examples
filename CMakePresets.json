{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-config",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_EXTENSIONS": "OFF"
      }
    },
    {
      "name": "linux-ninja-debug",
      "displayName": "Linux (Ninja) - Debug",
      "inherits": "base-config",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "generator": "Ninja",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "linux-ninja-release",
      "displayName": "Linux (Ninja) - Release",
      "inherits": "linux-ninja-debug",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "windows-msvc-base",
      "hidden": true,
      "inherits": "base-config",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "windows-msvc",
      "displayName": "Windows (VS 2022)",
      "inherits": "windows-msvc-base"
    },
    {
      "name": "windows-mingw-debug",
      "displayName": "Windows (MinGW) - Debug",
      "inherits": "base-config",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
      "generator": "MinGW Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    }
  ],
  "buildPresets": [
    { "name": "linux-ninja-debug", "configurePreset": "linux-ninja-debug" },
    { "name": "linux-ninja-release", "configurePreset": "linux-ninja-release" },
    { 
      "name": "windows-msvc-debug", 
      "configurePreset": "windows-msvc",
      "configuration": "Debug"
    },
    { 
      "name": "windows-msvc-release", 
      "configurePreset": "windows-msvc", 
      "configuration": "Release"
    },
    { "name": "windows-mingw-debug", "configurePreset": "windows-mingw-debug" }
  ]
}